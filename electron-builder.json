{
  "appId": "com.dstrecorder.pro",
  "productName": "Dst-Recorder",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "node_modules/**/*",
    "package.json",
    "src/assets/camera.icns",
    "src/assets/camera.ico",
    "src/assets/camera.png"
  ],
  "asarUnpack": [
    "node_modules/ffmpeg-ffprobe-static/**/*"
  ],
  "extraResources": [
    {
      "from": "bin",
      "to": "bin",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "icon": "src/assets/camera.icns",
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "extendInfo": {
      "NSMicrophoneUsageDescription": "Dst-Recorder использует микрофон для записи звука при захвате экрана."
    }
  },
  "win": {
    "icon": "src/assets/camera.ico",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
