{
  "appId": "com.dstrecorder.pro",
  "productName": "Dst-Recorder",
  "directories": {
    "output": "release"
  },
  "files": ["dist/**/*", "dist-electron/**/*", "node_modules/**/*", "package.json"],
  "asarUnpack": [
    "node_modules/ffmpeg-ffprobe-static/**/*"
  ],
  "extraResources": [
    {
      "from": "bin",
      "to": "bin",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
