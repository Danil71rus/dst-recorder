{
  "name": "screen-recorder-pro",
  "version": "1.0.0",
  "description": "Professional screen recording application for macOS and Windows",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "build:mac": "vue-tsc --noEmit && vite build && electron-builder --mac",
    "build:win": "vue-tsc --noEmit && vite build && electron-builder --win",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "preview": "vite preview",
    "compile": "tsc --noEmit && vite build"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/luxon": "^3.6.2",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "sass": "^1.69.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.15.5",
    "vue-tsc": "^2.2.12",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@vueuse/core": "^10.5.0",
    "bootstrap": "^5.3.7",
    "bootstrap-vue-3": "^0.5.1",
    "fluent-ffmpeg": "^2.1.3",
    "luxon": "^3.7.1",
    "pinia": "^2.1.7",
    "vue": "^3.3.8",
    "vue-i18n": "^9.8.0",
    "vue-router": "^4.2.5"
  },
  "build": {
    "appId": "com.screenrecorder.pro",
    "productName": "Screen Recorder Pro",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
