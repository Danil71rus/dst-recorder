{
  "name": "dst-recorder",
  "version": "1.0.0",
  "description": "Professional screen recording application for macOS and Windows",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite --port 3000",
    "prebuild": "node scripts/copy-ffmpeg.js",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "prebuild:mac": "node scripts/copy-ffmpeg.js",
    "build:mac": "vue-tsc --noEmit && vite build && electron-builder --mac",
    "prebuild:win": "node scripts/copy-ffmpeg.js",
    "build:win": "vue-tsc --noEmit && vite build && electron-builder --win",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "preelectron:build": "node scripts/copy-ffmpeg.js",
    "electron:build": "vite build && electron-builder",
    "preview": "vite preview",
    "compile": "tsc --noEmit && vite build"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/luxon": "^3.6.2",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "sass": "^1.69.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.15.5",
    "vue-tsc": "^2.2.12",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@vueuse/core": "^10.5.0",
    "bootstrap": "^5.3.7",
    "bootstrap-vue-3": "^0.5.1",
    "ffmpeg-ffprobe-static": "^6.1.2-rc.1",
    "fluent-ffmpeg": "^2.1.3",
    "luxon": "^3.7.1",
    "pinia": "^2.1.7",
    "vue": "^3.3.8",
    "vue-i18n": "^9.8.0",
    "vue-router": "^4.2.5"
  }
}
