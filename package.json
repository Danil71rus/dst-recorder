{
  "name": "dst-recorder",
  "version": "1.0.0",
  "description": "Professional screen recording application for macOS and Windows",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "prebuild": "node scripts/copy-ffmpeg.js",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "prebuild:mac": "node scripts/copy-ffmpeg.js",
    "build:mac": "vue-tsc --noEmit && vite build && electron-builder --mac",
    "prebuild:win": "node scripts/copy-ffmpeg.js",
    "build:win": "vue-tsc --noEmit && vite build && electron-builder --win",
    "electron:dev": "vite",
    "preelectron:build": "node scripts/copy-ffmpeg.js",
    "electron:build": "vite build && electron-builder",
    "preview": "vite preview",
    "compile": "tsc --noEmit && vite build",
    "lint": "eslint .",
    "lint-ci": "npx eslint ./ --max-warnings 0 --no-error-on-unmatched-pattern"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/lodash": "^4.17.20",
    "@types/luxon": "^3.6.2",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-vue": "6.0.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "concurrently": "^8.2.2",
    "electron": "37.2.2",
    "electron-builder": "24.6.4",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-unicorn": "^60.0.0",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.3.0",
    "sass": "^1.69.5",
    "typescript": "^5.2.2",
    "vite": "7.0.4",
    "vite-plugin-electron": "^0.15.5",
    "vue-tsc": "^2.2.12",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@vueuse/core": "^10.5.0",
    "bootstrap": "^5.3.7",
    "bootstrap-vue-3": "^0.5.1",
    "electron-log": "5.4.1",
    "electron-squirrel-startup": "1.0.1",
    "electron-store": "8.2.0",
    "electron-updater": "6.6.2",
    "ffmpeg-ffprobe-static": "^6.1.2-rc.1",
    "fluent-ffmpeg": "^2.1.3",
    "lodash": "^4.17.21",
    "luxon": "^3.7.1",
    "pinia": "3.0.3",
    "vue": "3.5.17",
    "vue-i18n": "^9.8.0",
    "vue-router": "4.5.1"
  },
    "pnpm": {
        "allowedBuildScripts": [
            "electron",
            "esbuild",
            "ffmpeg-ffprobe-static"
        ]
    }
}
